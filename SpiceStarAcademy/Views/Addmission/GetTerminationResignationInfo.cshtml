@model List<SJModel.TerminationViewModel>
@{
    ViewBag.Title = "Termination/Resignation";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ss = Model;
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Termination/Resignation
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> &nbsp; Termination/Resignation</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-body">
                        <div class="row col-md-12 table-responsive">
                            <table id="tblTRInfo" class="table table-bordered table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th class="no-sort">Sr.No</th>
                                        <th>Reg.No.</th>
                                        <th>Name</th>
                                        <th>Date</th>
                                        <th>Done By</th>
                                        <th>Remark</th>
                                        <th>Notice Period</th>
                                        <th>Last Working Day</th>
                                        <th>Status</th>
                                        <th>Fee Due Amount</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.Count() > 0)
                                    {

                                        for (int i = 0; i < Model.Count(); i++)
                                        {
                                    <tr>
                                        <td>@(i+1)</td>
                                        <td>@Model[i].RegNo</td>
                                        <td>@Model[i].StudentName</td>
                                        <td>@Model[i].TerminationOrResignationDate</td>
                                        <td>@Model[i].DoneBy</td>
                                        <td>@Model[i].StatusInfo</td>
                                        <td>@Model[i].NoticePeriod</td>
                                        <td>@Model[i].SchedulingDate</td>
                                        <td>@Model[i].CandidateActionName</td>
                                        <td>
                                            @Model[i].FeeDueAmount
                                        </td>
                                    </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
    </section>
    <!-- /.content -->
</div>
<script>
    $(document).ready(function () {
        $("#tblTRInfo").DataTable({
            dom: 'Bfrtip',
        buttons: [
            'excel'
        ]
        });
        StopLoading();
    });
    

</script>
