    //    if (height == "") {
    //        return false;
    //    }
    //    if (height < 38) {
    //        alert("Weight should be greater than or equal to 38kg.!");
    //        $scope.reg.Str_Weight = '';
    //        $('#txtWeight').focus();
    //    }
    //}
</script>


