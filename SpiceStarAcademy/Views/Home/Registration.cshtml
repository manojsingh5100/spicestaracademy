
@{
    ViewBag.Title = "Registration";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Registration
            @*<small>advanced tables</small>*@
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> &nbsp; Registration</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-body">
                        <div class="row col-md-12 table-responsive">
                            <table id="tblRegistration" class="table table-bordered table-striped" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Sno</th>
                                        <th>Reg No</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>DOB</th>
                                        <th>Gender</th>
                                        <th>Payment Status</th>
                                        <th>RegisterDate</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script>
    $(document).ready(function () {
        LoadRagisterData();
    });

    var RagisterTabApi;
        function LoadRagisterData() {
            RagisterTabApi = $("#tblRegistration").DataTable({
                "searchDelay": 1000,
                "serverSide": true,
                "filter": true,
                "orderMulti": false,
                "ajax": {
                    url: '@Url.Action("GetRagisterList", "Home")',
                    type: "POST",
                    datatype: "json",
                    error: function (jqXHR, exception) {

                    }
                },
                "columns": [

                    { "data": "Id"},
                    { "data": "RegistartionNo" },
                    { "data": "StudentName" },
                    { "data": "Email" },
                    { "data": "Mobile" },
                    {"data": "DateOfBirth"},
                    { "data": "Gender" },
                    {
                        "data": "PaymentStatus",
                        "render": function (data, type, row) {
                            if (row.PaymentStatus)
                                return "<span style='color:green'>Success</span>"
                            else
                                return "<span style='color:red'>Failed</span>"
                        }
                    },
                    {
                        "data": "RegistrationDate",
                        "render": function (data, type, row) {
                            return DateFormat(row.RegistrationDate);
                        }
                    },
                ], "order": [[0, 'asc']],

            });
            $.fn.dataTable.ext.errMode = 'throw';
    }

    function DateFormat(jsonDate) {
        var value = new Date
            (
            parseInt(jsonDate.replace(/(^.*\()|([+-].*$)/g, ''))
            );
        var dat = value.getDate() +
            1 +
            "/" +
            value.getMonth() +
            "/" +
            value.getFullYear();
        return dat;
    }

</script>
