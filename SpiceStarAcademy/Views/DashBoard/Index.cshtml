@model SJModel.DesktopChartList
@{
    ViewBag.Title = "DashBoard";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Dashboard
        </h1>
        <ol class="breadcrumb">
            <li class="active"><i class="fa fa-dashboard"></i> &nbsp; Dashboard</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content" style="display:block">
        <!-- Info boxes -->
        <div class="row">
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-aqua"><i class="fa fa-address-book"></i></span>
                    <div class="info-box-content">
                        <input type="hidden" id="hdnmappoint" value="@Model.Map" />
                        <span class="info-box-text">Total Registration</span>
                        <span class="info-box-number">@Model.TotalRegistartion</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red"><i class="fa fa-address-card"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Admission</span>
                        <span class="info-box-number">@Model.TotalAdmission</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green"><i class="fa fa-television"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Screening</span>
                        <span class="info-box-number">@Model.TotalScreenning</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
            <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-yellow"><i class="fa fa-medkit"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Total Medical</span>
                        <span class="info-box-number">@Model.TotalMedical</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title" id="headStr">Monthly Recap Report </h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-8" style="border-right:1px solid #ccc">
                                <p class="text-center">
                                    <strong>@ViewBag.recentmonth</strong>
                                </p>
                                <div class='chart'><canvas id='barChart' style='height:256px'></canvas></div>
                            </div>
                            @if (Model.TotalRegByMonth.Count > 0)
                            {
                                <!-- /.col -->
                                <div class="col-md-4">
                                    <p class="text-center">
                                        <strong>Month wise registration</strong>
                                    </p>
                                    <div class="progress-group">
                                        <span class="progress-te    xt">@Model.TotalRegByMonth[0].Month</span>
                                        <span class="progress-number"><b>@(Model.TotalRegByMonth[0].NoOfRegister)</b></span>
                                        <div class="progress sm">
                                            <div class="progress-bar progress-bar-aqua" style="width: @((Model.TotalRegByMonth[0].NoOfRegister * 100)/1000)%"></div>
                                        </div>
                                    </div>
                                    <!-- /.progress-group -->
                                    @if (Model.TotalRegByMonth.Count > 1)
                                    {
                                        <div class="progress-group">
                                            <span class="progress-text">@Model.TotalRegByMonth[1].Month</span>
                                            <span class="progress-number"><b>@(Model.TotalRegByMonth[1].NoOfRegister)</b></span>
                                            <div class="progress sm">
                                                <div class="progress-bar progress-bar-red" style="width: @((Model.TotalRegByMonth[1].NoOfRegister * 100)/1000)%"></div>
                                            </div>
                                        </div>
                                    }
                                    <!-- /.progress-group -->
                                    @if (Model.TotalRegByMonth.Count > 2)
                                    {
                                        <div class="progress-group">
                                            <span class="progress-text">@Model.TotalRegByMonth[2].Month</span>
                                            <span class="progress-number"><b>@(Model.TotalRegByMonth[2].NoOfRegister)</b></span>
                                            <div class="progress sm">
                                                <div class="progress-bar progress-bar-green" style="width: @((Model.TotalRegByMonth[2].NoOfRegister * 100)/1000)%"></div>
                                            </div>
                                        </div>
                                    }
                                    <!-- /.progress-group -->
                                    @if (Model.TotalRegByMonth.Count > 3)
                                    {
                                        <div class="progress-group">
                                            <span class="progress-text">@Model.TotalRegByMonth[3].Month</span>
                                            <span class="progress-number"><b>@(Model.TotalRegByMonth[3].NoOfRegister)</b></span>
                                            <div class="progress sm">
                                                <div class="progress-bar progress-bar-yellow" style="width: @((Model.TotalRegByMonth[3].NoOfRegister * 100)/1000)%"></div>
                                            </div>
                                        </div>
                                    }
                                    <!-- /.progress-group -->
                                    @if (Model.TotalRegByMonth.Count > 4)
                                    {
                                        <div class="progress-group">
                                            <span class="progress-text">@Model.TotalRegByMonth[4].Month</span>
                                            <span class="progress-number"><b>@(Model.TotalRegByMonth[4].NoOfRegister)</b></span>
                                            <div class="progress sm">
                                                <div class="progress-bar progress-bar-green" style="width: @((Model.TotalRegByMonth[4].NoOfRegister * 100)/1000)%"></div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <!-- /.col -->
                            }
                        </div>
                        <!-- /.row -->
                    </div>
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- Main row -->
        <!-- /.row -->

        <div class="row" style="display:none">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header ui-sortable-handle" style="cursor: move;">
                        <h3 class="box-title">Current Top 5 Activities</h3>
                    </div>
                    <div class="box-body">
                        @if (Model.GetActivityList.Count() > 0)
                        {
                            foreach (var item in Model.GetActivityList)
                            {

                                <div class="direct-chat-messages">
                                    <div class="direct-chat-msg" style="font-size:16px;">
                                        <div class="direct-chat-info clearfix">
                                            <span class="direct-chat-name pull-left">@item.ByActivity</span>
                                            <span class="direct-chat-timestamp pull-right">@item.ActivityDate</span>
                                        </div>
                                        <img class="direct-chat-img" src="~/Images/iconfinder_activity_3324973.png" alt="message user image">
                                        <div class="direct-chat-text">
                                            @item.ActivityMessage
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<script>
    $(document).ready(function () {
        chartHeader();
        setTimeout(function () { BarChart(GetListOfAxisPoint()); }, 300);
        StopLoading();
    });
</script>


