        }

        .button {
            width: 100px;
            height: 100px;
            padding-left: 20px;
        }
    </style>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-body">
                        <div class="alert alert-success fade in alert-dismissable text-center" id="dvMsg" style="display:none;">
