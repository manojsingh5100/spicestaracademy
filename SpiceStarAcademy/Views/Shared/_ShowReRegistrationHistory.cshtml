@model List<SJModel.RegistrationViewModel>
@{
    int num = 1;
}
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        @if (Model.Count > 0)
                        {
                            <tr>
                                <th>Sr.No</th>
                                <th>Reg.No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>DOB</th>
                                <th>Gender</th>
                                <th>Course</th>
                                <th>Reg. Fee Status</th>
                                <th>Screening</th>
                                <th>Medical</th>
                                <th>Remark</th>
                                <th>Reg.Date</th>
                            </tr>
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@num</td>
                                    <td>@item.RegistartionNo</td>
                                    <td>@item.StudentName</td>
                                    <td>@item.Email</td>
                                    <th>@item.Mobile</th>
                                    <td>@item.DOBStr</td>
                                    <td>@item.Gender</td>
                                    <td>@item.CourseName</td>
                                    <td>
                                        @if (item.PaymentStatusStr == "Success")
                                        {
                                            <span style='width:100px;' class='label label-success'> Paid &nbsp; <i class='fa fa-check' aria-hidden='true'></i> </span>
                                        }
                                        else if (item.PaymentStatusStr == "Pending")
                                        {
                                            <span class='label label-danger'> Pending &nbsp; <i class='fa fa-close' aria-hidden='true'></i></span>
                                        }
                                        else
                                        {
                                            @item.PaymentStatusStr
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsScreenningClear != null)
                                        {
                                            if (item.IsScreenningClear.Value)
                                            {
                                                <a href="javascript:void(0)" onclick="openScreenPopUpModelToShow('@item.RegistartionNo',this)">  <span style='width:100px;' class='label label-success'> Selected &nbsp; <i class='fa fa-check' aria-hidden='true'></i> </span></a>
                                            }
                                            else
                                            {
                                                <a href="javascript:void(0)" onclick="openScreenPopUpModelToShow(@item.RegistartionNo,this)">
                                                    <span class='label label-danger'> Rejected &nbsp; <i class='fa fa-close' aria-hidden='true'></i></span>
                                                </a>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsMedicalClear != null)
                                        {
                                            if (item.IsMedicalClear.Value)
                                            {
                                                <span style='width:100px;' class='label label-success'> Cleared &nbsp; <i class='fa fa-check' aria-hidden='true'></i> </span>
                                            }
                                            else
                                            {
                                                <span class='label label-danger'> Not Clear &nbsp; <i class='fa fa-close' aria-hidden='true'></i></span>
                                            }
                                        }
                                    </td>
                                    <td>@item.MedicalRemark</td>
                                    <td>@item.ReRegisterHistoryDate</td>
                                </tr>
                                num = num + 1;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
<script>
    function showScreenning(id, obj) {
        openScreenPopUpModel(id,obj);
    }
</script>
